{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/app.js",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "/usr/local/bin/node" // Node.jsの実行ファイルのパスを明示的に指定
    }
  ]
}
